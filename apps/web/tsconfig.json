{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@qlick/ui": ["../../packages/ui/src"],
      "@qlick/core": ["../../packages/core/src"]
    }
  },
  "include": ["src"]
}


